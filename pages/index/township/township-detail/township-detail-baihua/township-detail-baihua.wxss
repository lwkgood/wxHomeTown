.posts-swiper{
  height: 350rpx;
  width: 100%;
}
.slide-image{
  height: 350rpx;
  width: 100%;
}


.line{
  background: #eee;
  height: 3px;
}

.top{
  height: 25px;
  text-align: center;
  line-height: 25px;
  font-size: 14px;
  color: cornflowerblue;
  border-bottom: 2px solid #eee;
  margin-bottom: 3px;
}


.city{
  margin-top: 3px;
  display: flex;
  justify-content: center;
  background: #FDF5E6;
  border: 1px solid #eee;
  border-radius: 5px;
  width: 95%;
  margin: 0 auto;
}
.city .city_font{
  width: 95%;
  font-size: 14px;
}




.pagoda{
  background: #eeeeff;
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.pagoda .pagoda_img{
  width: 30%;
  height: 250rpx;
  margin-top: 25rpx;
}
.pagoda .pagoda_img .img{
  width: 100%;
  height: 250rpx;
}
.pagoda .pagoda_word{
  width: 60%;
  height: 250rpx;
  margin-top: 25rpx;
  font-size: 13px;
}






.map{
  margin-top: 3px;
}
.page-section-gap{
  box-sizing: border-box;
  padding: 0 30rpx;
}

