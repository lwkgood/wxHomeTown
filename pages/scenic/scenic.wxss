.swiper-tab{
  display: flex;
  width: 100%;
  flex-direction: row;
  line-height: 80rpx;
  border-bottom: 2rpx solid #777;
  position: fixed;
  top: 0rpx;
  background: white;
}
.tab-item{
  width:33.3%;
  text-align: center;
  font-size: 15px;
  color: #777;
}
.on{
  color: green;
  border-bottom:5rpx solid lightcoral;
}


.pagoda{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.pagoda .pagoda_img{
  width: 30%;
  height: 250rpx;
  margin-top: 25rpx;
}
.pagoda .pagoda_img .img{
  width: 100%;
  height: 250rpx;
}
.pagoda .pagoda_word{
  width: 60%;
  height: 250rpx;
  margin-top: 25rpx;
  font-size: 13px;
}

.pagoda .pagoda_word view{
 height: 50rpx;
}

.line{
  height: 80rpx;
}

.show{
  display: block;
}
.hidden{
  display: none;
}